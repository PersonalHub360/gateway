# Trea Gateway Frontend Environment Variables
# Copy this file to .env and update the values as needed

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WS_URL=ws://localhost:5000

# Application Configuration
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0
REACT_APP_APP_NAME=Trea Gateway

# Authentication Configuration
REACT_APP_JWT_SECRET=your-jwt-secret-key
REACT_APP_SESSION_TIMEOUT=1800000
REACT_APP_REFRESH_TOKEN_THRESHOLD=300000

# Feature Flags
REACT_APP_ENABLE_2FA=true
REACT_APP_ENABLE_BIOMETRIC=false
REACT_APP_ENABLE_SOCIAL_LOGIN=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# Payment Gateway Configuration
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
REACT_APP_PAYPAL_CLIENT_ID=your_paypal_client_id
REACT_APP_FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key

# Analytics and Monitoring
REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
REACT_APP_SENTRY_DSN=https://your-sentry-dsn
REACT_APP_HOTJAR_ID=your_hotjar_id

# Social Login Configuration
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id
REACT_APP_FACEBOOK_APP_ID=your_facebook_app_id
REACT_APP_TWITTER_API_KEY=your_twitter_api_key

# Map and Location Services
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
REACT_APP_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf
REACT_APP_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
REACT_APP_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# Notification Services
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id

# Development Configuration
REACT_APP_DEBUG_MODE=true
REACT_APP_LOG_LEVEL=debug
REACT_APP_MOCK_API=false

# Security Configuration
REACT_APP_ENABLE_CSP=true
REACT_APP_ENABLE_HTTPS_ONLY=false
REACT_APP_ENABLE_SECURE_COOKIES=false

# Localization
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_DEFAULT_CURRENCY=USD
REACT_APP_DEFAULT_TIMEZONE=UTC

# Performance Configuration
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_ENABLE_CODE_SPLITTING=true
REACT_APP_BUNDLE_ANALYZER=false

# Third-party Integrations
REACT_APP_INTERCOM_APP_ID=your_intercom_app_id
REACT_APP_ZENDESK_KEY=your_zendesk_key
REACT_APP_CRISP_WEBSITE_ID=your_crisp_website_id

# Testing Configuration
REACT_APP_TEST_USER_EMAIL=test@example.com
REACT_APP_TEST_USER_PASSWORD=testpassword123
REACT_APP_ENABLE_TEST_MODE=false